<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MaratonaApp.Pages.LoginPage"
             BackgroundColor="DarkCyan">

    <StackLayout Orientation="Vertical" Padding="20">

        <Image Source="shoppingBag.png" VerticalOptions="StartAndExpand" HeightRequest="170" Margin="0, 100"/>

        <Button Text="Logar com Facebook" TextColor="White" BackgroundColor="#3B5998" 
                Margin="0, 30" VerticalOptions="End" Command="{Binding LoginCommand}"
                MinimumHeightRequest="30"/>

    </StackLayout>
    
</ContentPage>